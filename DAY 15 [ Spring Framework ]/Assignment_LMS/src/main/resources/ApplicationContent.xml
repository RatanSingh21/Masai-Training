<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- bean definitions here -->

    <!-- Book Beans using constructor injection -->
    <bean id="book1" class="in.ratansgh.Book">
        <constructor-arg value="101"/>
        <constructor-arg value="Spring in Action"/>
        <constructor-arg value="Craig Walls"/>
    </bean>

    <bean id="book2" class="in.ratansgh.Book">
        <constructor-arg value="102"/>
        <constructor-arg value="Effective Java"/>
        <constructor-arg value="Joshua Bloch"/>
    </bean>

    <!-- Member Bean using setter injection -->
    <bean id="member" class="in.ratansgh.Member">
        <property name="memberID" value="M001"/>
        <property name="name" value="John Doe"/>
    </bean>

    <!-- Library Bean with list and ref -->
    <bean id="lib" class="in.ratansgh.Library">
        <property name="name" value="City Central Library"/>
        <property name="books">
            <list>
                <ref bean="book1"/>
                <ref bean="book2"/>
            </list>
        </property>
        <property name="member" ref="member"/>
    </bean>

</beans>
